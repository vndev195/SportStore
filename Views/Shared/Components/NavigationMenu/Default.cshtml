@model IEnumerable<string>
<div class="d-grid gap-2">
    <a class="btn text-white bg-dark"asp-action="Index"
       asp-controller="Home" asp-route-category="">
        Home
    </a>
    @foreach (string category in Model ?? Enumerable.Empty<string>()) {
        <a class="btn @(category == ViewBag.Category ? "btn-primary" : "btn-outline-secondary")"
           asp-action="Index" asp-controller="Home"
           asp-route-category="@category">
            @category
        </a>
    }
</div>